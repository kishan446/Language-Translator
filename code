    <script type="module">
        // Global environment variables provided by the Canvas platform
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const apiKey = ""; // Canvas environment handles the API key internally

        const sourceTextarea = document.getElementById('sourceText');
        const translatedTextarea = document.getElementById('translatedText');
        const sourceLanguageSelect = document.getElementById('sourceLanguage');
        const targetLanguageSelect = document.getElementById('targetLanguage');
        const translationToneSelect = document.getElementById('translationTone');
        const translateButton = document.getElementById('translateButton');
        const swapButton = document.getElementById('swapLanguagesButton');
        const copyButton = document.getElementById('copyButton');
        const listenButton = document.getElementById('listenButton');
        const statusMessage = document.getElementById('statusMessage');
        const charCountSpan = document.getElementById('charCount');
        const wordCountSpan = document.getElementById('wordCount');
        
        // NEW: Loading Icon element (now a GIF)
        const loadingIcon = document.getElementById('loadingIcon');
        
        // DOM elements for the map feature
        const languageMapContainer = document.getElementById('languageMapContainer');
        const mapTitle = document.getElementById('mapTitle');
        const mapFlag = document.getElementById('mapFlag');
        const mapSummary = document.getElementById('mapSummary');
        const mapStatus = document.getElementById('mapStatus');

        const LLM_MODEL_NAME = 'gemini-2.5-flash-preview-09-2025';
        const TTS_MODEL_NAME = 'gemini-2.5-flash-preview-tts';
        const LLM_API_URL = `https://generativelanguage.googleapis.com/v1beta/models/${LLM_MODEL_NAME}:generateContent?key=${apiKey}`;
        const TTS_API_URL = `https://generativelanguage.googleapis.com/v1beta/models/${TTS_MODEL_NAME}:generateContent?key=${apiKey}`;
        const MAX_RETRIES = 5;


        // --- TTS Utility Functions ---

        /** Converts a base64 string to an ArrayBuffer. */
        function base64ToArrayBuffer(base64) {
            const binaryString = atob(base64);
            const len = binaryString.length;
            const bytes = new Uint8Array(len);
            for (let i = 0; i < len; i++) {
                bytes[i] = binaryString.charCodeAt(i);
            }
            return bytes.buffer;
        }

        /** Converts raw PCM data (Int16Array) into a WAV Blob. */
        function pcmToWav(pcm16, sampleRate) {
            const numChannels = 1;
            const bytesPerSample = 2; // 16-bit PCM
            const byteRate = sampleRate * numChannels * bytesPerSample;
            const blockAlign = numChannels * bytesPerSample;

            const buffer = new ArrayBuffer(44 + pcm16.length * bytesPerSample);
            const view = new DataView(buffer);
            let offset = 0;

            function writeString(s) {
                for (let i = 0; i < s.length; i++) {
                    view.setUint8(offset + i, s.charCodeAt(i));
                }
                offset += s.length;
            }

            function writeUint32(i) {
                view.setUint32(offset, i, true);
                offset += 4;
            }

            function writeUint16(i) {
                view.setUint16(offset, i, true);
                offset += 2;
            }

            // RIFF chunk
            writeString('RIFF');
            writeUint32(36 + pcm16.length * bytesPerSample); // ChunkSize
            writeString('WAVE');

            // FMT sub-chunk
            writeString('fmt ');
            writeUint32(16); // Subchunk1Size (16 for PCM)
            writeUint16(1); // AudioFormat (1 for PCM)
            writeUint16(numChannels);
            writeUint32(sampleRate);
            writeUint32(byteRate);
            writeUint16(blockAlign);
            writeUint16(16); // BitsPerSample (16-bit)

            // Data sub-chunk
            writeString('data');
            writeUint32(pcm16.length * bytesPerSample); // Subchunk2Size

            // Write PCM data
            for (let i = 0; i < pcm16.length; i++) {
                view.setInt16(offset, pcm16[i], true);
                offset += bytesPerSample;
            }

            return new Blob([buffer], { type: 'audio/wav' });
        }

        /** Plays the audio Blob using AudioContext. */
        function playAudio(audioBlob) {
            const url = URL.createObjectURL(audioBlob);
            const audio = new Audio(url);
            audio.play();
            audio.onended = () => {
                URL.revokeObjectURL(url);
            };
        }


        /**
         * Sends the translated text to the TTS API for playback.
         */
        async function speakTranslatedText() {
            const textToSpeak = translatedTextarea.value.trim();
            const targetLang = targetLanguageSelect.value;
            
            if (!textToSpeak) {
                statusMessage.textContent = 'No translated text to play.';
                setTimeout(() => statusMessage.textContent = '', 3000);
                return;
            }

            listenButton.disabled = true;
            listenButton.innerHTML = `<svg class="animate-pulse" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="10" y="2" width="4" height="20" rx="2" ry="2"/><rect x="4" y="8" width="4" height="8" rx="2" ry="2"/><rect x="16" y="8" width="4" height="8" rx="2" ry="2"/></svg>`;
            statusMessage.textContent = 'Generating speech audio...';
            
            // Note: We use the language name as context for the TTS engine.
            const prompt = `Say in a standard, clear tone, recognizing the language is ${targetLang}: ${textToSpeak}`;

            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
                generationConfig: {
                    responseModalities: ["AUDIO"],
                    speechConfig: {
                        voiceConfig: {
                            prebuiltVoiceConfig: { voiceName: "Charon" } // A clear, informative voice
                        }
                    }
                },
                model: TTS_MODEL_NAME
            };

            for (let attempt = 0; attempt < MAX_RETRIES; attempt++) {
                try {
                    const response = await fetch(TTS_API_URL, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.status === 429 && attempt < MAX_RETRIES - 1) {
                        const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        continue;
                    }

                    if (!response.ok) {
                        throw new Error(`TTS API request failed with status: ${response.status}`);
                    }

                    const result = await response.json();
                    const part = result.candidates?.[0]?.content?.parts?.[0];
                    const audioData = part?.inlineData?.data;
                    const mimeType = part?.inlineData?.mimeType; // e.g., audio/L16;rate=24000

                    if (!audioData || !mimeType) {
                        throw new Error('Received invalid audio data from API.');
                    }
                    
                    const sampleRateMatch = mimeType.match(/rate=(\d+)/);
                    if (!sampleRateMatch || sampleRateMatch.length < 2) {
                        throw new Error('Could not parse audio sample rate from mime type.');
                    }

                    const sampleRate = parseInt(sampleRateMatch[1], 10);
                    const pcmDataBuffer = base64ToArrayBuffer(audioData);
                    const pcm16 = new Int16Array(pcmDataBuffer);
                    
                    const wavBlob = pcmToWav(pcm16, sampleRate);
                    playAudio(wavBlob);
                    
                    statusMessage.textContent = 'Audio playing...';
                    break; // Success

                } catch (error) {
                    console.error('TTS Error:', error);
                    statusMessage.textContent = `TTS failed: ${error.message}`;
                    if (attempt === MAX_RETRIES - 1) {
                        break; // Failed all retries
                    }
                }
            }

            // Reset button state
            listenButton.disabled = false;
            listenButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon></svg>`;
            setTimeout(() => {
                if(!statusMessage.textContent.includes('failed')) {
                    statusMessage.textContent = '';
                }
            }, 5000);
        }


        // --- Utility Functions ---

        /**
         * Updates the character and word counts for the source text.
         */
        function updateCounts() {
            const text = sourceTextarea.value;
            const charCount = text.length;
            const wordCount = text.trim().split(/\s+/).filter(word => word.length > 0).length;

            charCountSpan.textContent = `${charCount} characters`;
            wordCountSpan.textContent = `${wordCount} words`;
        }
        
        /**
         * Swaps the source and target languages in the dropdowns.
         */
        function swapLanguages() {
            const sourceLang = sourceLanguageSelect.value;
            const targetLang = targetLanguageSelect.value;

            // Only swap if the source is not "Auto-Detect"
            if (sourceLang !== "Auto-Detect" && targetLang !== "Auto-Detect") {
                sourceLanguageSelect.value = targetLang;
                targetLanguageSelect.value = sourceLang;
            } else if (sourceLang === "Auto-Detect" && targetLang !== "Auto-Detect") {
                // If source is Auto, set source to target and target to a common language (e.g., English)
                sourceLanguageSelect.value = targetLang;
                targetLanguageSelect.value = 'English';
            } else if (targetLang === "Auto-Detect") {
                 // If target is Auto, set target to source and source to English (as a safe default)
                targetLanguageSelect.value = sourceLang;
                sourceLanguageSelect.value = 'English';
            }
            
            // Clear translated text upon swap
            translatedTextarea.value = '';
            statusMessage.textContent = 'Languages swapped.';
            setTimeout(() => statusMessage.textContent = '', 3000);
            
            // Re-trigger the map feature for the new source language
            generateLanguageMapSummary(sourceLanguageSelect.value);
        }

        /**
         * Copies the translated text to the clipboard using the fallback method.
         */
        function copyToClipboard() {
            const text = translatedTextarea.value;
            if (!text) {
                statusMessage.textContent = 'No text to copy.';
                setTimeout(() => statusMessage.textContent = '', 3000);
                return;
            }

            // Create a temporary textarea element
            const tempTextArea = document.createElement('textarea');
            tempTextArea.value = text;
            tempTextArea.style.position = 'fixed'; // Avoid scrolling to bottom
            tempTextArea.style.opacity = '0';
            document.body.appendChild(tempTextArea);

            // Select the text
            tempTextArea.select();
            
            try {
                // Execute copy command
                document.execCommand('copy');
                statusMessage.textContent = 'Copied to clipboard!';
            } catch (err) {
                console.error('Copy command failed:', err);
                statusMessage.textContent = 'Copy failed. Please manually select and copy the text.';
            } finally {
                // Remove the temporary element
                document.body.removeChild(tempTextArea);
                setTimeout(() => statusMessage.textContent = '', 3000);
            }
        }

        /**
         * Converts the UI language selection into a model-friendly prompt language.
         */
        function getSourceLanguageForPrompt(lang) {
            return lang === 'Auto-Detect' ? 'the source language (detect automatically)' : lang;
        }

        // --- MAP SUMMARY LOGIC ---

        /**
         * Generates a concise summary of the native region and flag for a given language.
         */
        async function generateLanguageMapSummary(language) {
            if (language === 'Auto-Detect') {
                mapTitle.textContent = 'Source Language Region';
                mapFlag.textContent = 'ðŸ¤”';
                mapSummary.textContent = 'Region map not available for Auto Detect.';
                return;
            }

            mapTitle.textContent = `Region: ${language}`;
            mapFlag.textContent = '...';
            mapSummary.textContent = 'Generating region data...';
            mapStatus.textContent = '';


            const systemPrompt = "You are a concise linguistic geography expert. Your task is to identify the primary native region(s) and the most relevant flag emoji for a given language. Respond *only* with a JSON object that strictly adheres to the provided schema. The summary must be brief (1-2 sentences).";

            const userQuery = `Provide the region summary and flag emoji for the language: ${language}.`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
                generationConfig: {
                    responseMimeType: "application/json",
                    responseSchema: {
                        type: "OBJECT",
                        properties: {
                            language: { type: "STRING" },
                            flag_emoji: { type: "STRING" },
                            native_region_summary: { type: "STRING" }
                        },
                        propertyOrdering: ["language", "flag_emoji", "native_region_summary"]
                    }
                }
            };

            const apiUrl = LLM_API_URL;

            for (let attempt = 0; attempt < MAX_RETRIES; attempt++) {
                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.status === 429 && attempt < MAX_RETRIES - 1) {
                        const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        continue;
                    }

                    if (!response.ok) {
                         throw new Error(`API request failed with status: ${response.status}`);
                    }

                    const result = await response.json();
                    const jsonText = result.candidates?.[0]?.content?.parts?.[0]?.text;
                    const parsedJson = JSON.parse(jsonText);
                    
                    if (parsedJson && parsedJson.flag_emoji && parsedJson.native_region_summary) {
                        mapFlag.textContent = parsedJson.flag_emoji;
                        mapSummary.textContent = parsedJson.native_region_summary;
                        mapStatus.textContent = '';
                    } else {
                        throw new Error("Invalid JSON structure received.");
                    }
                    break; // Success

                } catch (error) {
                    console.error('Error fetching map summary:', error);
                    mapFlag.textContent = 'âŒ';
                    mapSummary.textContent = 'Could not load region data.';
                    mapStatus.textContent = `Error: ${error.message.substring(0, 50)}...`;
                    if (attempt === MAX_RETRIES - 1) {
                        break; // Failed all retries
                    }
                }
            }
        }


        // --- Core Translation Logic ---

        /**
         * Sends the translation request to the Gemini API with exponential backoff.
         */
        async function translateText() {
            const sourceText = sourceTextarea.value.trim();
            const sourceLang = sourceLanguageSelect.value;
            const targetLang = targetLanguageSelect.value;
            const selectedTone = translationToneSelect.value;

            if (!sourceText) {
                statusMessage.textContent = 'Please enter text to translate.';
                setTimeout(() => statusMessage.textContent = '', 3000);
                return;
            }
            
            if (sourceLang === targetLang) {
                 statusMessage.textContent = `Source and Target languages are the same (${sourceLang}).`;
                 return;
            }

            // Set UI to loading state
            translateButton.disabled = true;
            translateButton.textContent = '... Translating ...';
            loadingIcon.classList.remove('hidden'); // SHOW DANCING ANIMAL GIF
            statusMessage.textContent = 'Consulting the Polyglot Portal...';
            translatedTextarea.value = '';

            const systemPrompt = "You are a world-class, multi-lingual translation engine. Your sole task is to translate the input text precisely and idiomatically into the target language. Respond *only* with the translated text, nothing else. Do not add any conversational text, notes, or source information. Ensure the output strictly adheres to the requested tone.";

            const sourceLangPrompt = getSourceLanguageForPrompt(sourceLang);

            // Updated query to include tone instruction
            const userQuery = `Translate the following text from ${sourceLangPrompt} to ${targetLang}. The desired tone for the output is: ${selectedTone}. Text: "${sourceText}"`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: {
                    parts: [{ text: systemPrompt }]
                },
            };

            for (let attempt = 0; attempt < MAX_RETRIES; attempt++) {
                try {
                    const response = await fetch(LLM_API_URL, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    if (response.status === 429 && attempt < MAX_RETRIES - 1) {
                        const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                        console.warn(`Rate limit hit, retrying in ${Math.round(delay / 1000)}s...`);
                        statusMessage.textContent = `Retrying translation (attempt ${attempt + 2}/${MAX_RETRIES})...`;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        continue;
                    }

                    if (!response.ok) {
                        throw new Error(`API request failed with status: ${response.status}`);
                    }

                    const result = await response.json();
                    const translatedText = result.candidates?.[0]?.content?.parts?.[0]?.text || 'Translation failed or returned empty content.';

                    translatedTextarea.value = translatedText;
                    statusMessage.textContent = 'Translation complete.';
                    break; // Success, exit the loop

                } catch (error) {
                    console.error('Error during translation:', error);
                    statusMessage.textContent = `Translation failed: ${error.message}`;
                    translatedTextarea.value = 'An error occurred during translation.';
                    if (attempt === MAX_RETRIES - 1) {
                        break; // Failed all retries
                    }
                }
            }

            // Reset UI state
            translateButton.disabled = false;
            translateButton.textContent = 'Translate Text';
            loadingIcon.classList.add('hidden'); // HIDE DANCING ANIMAL GIF

            // Clear status after 5s unless it's a final error
            setTimeout(() => {
                if(!statusMessage.textContent.includes('failed')) {
                    statusMessage.textContent = '';
                }
            }, 5000);
        }

        // --- Event Listeners and Initialization ---
        
        window.onload = () => {
             // Initialize AudioContext on user interaction later to avoid browser warnings
             window.AudioContext = window.AudioContext || window.webkitAudioContext;
             
             const defaultText = "The project requires a comprehensive, multi-disciplinary approach to solve the challenge of sustainable urban development. We must collaborate across various fields.";
             sourceTextarea.value = defaultText;
             updateCounts();
             // Initial call to generate the map summary for the default source language
             generateLanguageMapSummary(sourceLanguageSelect.value);
        }
        
        // Listeners
        translateButton.addEventListener('click', translateText);
        swapButton.addEventListener('click', swapLanguages);
        copyButton.addEventListener('click', copyToClipboard);
        listenButton.addEventListener('click', speakTranslatedText);
        sourceTextarea.addEventListener('input', updateCounts);
        
        // Listener to generate the map summary whenever the source language changes
        sourceLanguageSelect.addEventListener('change', (e) => generateLanguageMapSummary(e.target.value));

        // Allow translation on Enter key press in the source textarea
        sourceTextarea.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                if (!translateButton.disabled) {
                    translateText();
                }
            }
        });
    </script>
</body>
</html>
